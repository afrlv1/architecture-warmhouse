@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

Person(user, "Пользователь", "Управляет отоплением и смотрит температуру через веб-интерфейс")

System(system, "Монолитное приложение «Тёплый дом»", "Go + PostgreSQL. Управление отоплением и получение температуры.")

System_Ext(heatingDevice, "Модуль отопления", "Устройство управления отоплением")
System_Ext(tempSensor, "Температурный датчик", "Отдаёт температуру по запросу сервера")
System_Ext(webClient, "Веб-клиент", "Интерфейс пользователя")

Rel(user, webClient, "Использует")
Rel(webClient, system, "HTTP", "Синхронно")
Rel(system, heatingDevice, "Команды включения/выключения")
Rel(system, tempSensor, "Запрос температуры")
Rel(system, "PostgreSQL", "Чтение/запись")

@enduml
